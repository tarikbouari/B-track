<section class="container-fluid px-0 text-center">
    <div class="head-category text-center d-flex justify-content-between ">
        <span class="text-white"> CATEGORIES</span>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo: false},  class: "log-out-button " %>
    </div>
    <div class="container d-flex flex-column px-3 ctn-group">
        <% if @groups.empty?%>
            <span> There is no categories. Create one</span>
        <% else%>
        <% @groups.each do |category|  %>
            <%= link_to group_entities_path(category.id) do %>
            <div class="d-flex align-items-center justify-content-between g-5 p-3 bg-white text-dark">
            
                    <div>
                    <%= category.icon %>

                    </div>
                     
                    <div class="d-flex, flex-colum gap-3">
                    <span> <%= category.name %></span>
                    <span> <%= category.format_date(category.created_at) %></span>

                    </div>

                    <span> <%= category.total_amount %></span>
            
            
            </div>
        <%end%>  
        <%end%>
        <%end%>      
          
    </div>
    <%= link_to "New Category",  new_group_path, class: "new-group my-3 btn btn-primary sm"  %>
  
</section>
