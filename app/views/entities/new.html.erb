<section class="container-fluid px-0 text-center ">
<div class="head-category text-center d-flex justify-content-between ">
<span class="text-white"> ADD TRANSACTION</span>
<%= link_to "back", groups_path(@group),  class: "text-white " %>
</div>
<div class="container  d-flex  flex-column py-5">

 <div class="border border-3 p-3 ">
 <%= form_with model:@entity , url: groups_path(@group) do |form| %>
    <div class="mb-3  d-flex flex-column ">
    <label class ="form-label">name</label>
    <%= form.text_field :name %>
    </div>

    <div>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

        <div>
            <%= form.number_field :amount, placeholder: "Amount" %>
        </div>
    <div>
    <%= form.fields_for :expenses do |expense_subform| %>
        <%= expense_subform.collection_select :group_id, @groups.order(:name),:id,:name, include_blank: "--Choose Category--" %>
        <% end %>
      <div>
      
    <%= form.submit 'Add transaction', class: 'btn btn-gradient btn-primary block' %>
    </div>

    <%end%>
 </div>
 
</div>
</section>